@model ErrorViewModel
@{
    ViewData["Title"] = "Bienvenido a mi página";
}

<style>
    body {
        background: linear-gradient(135deg, #4facfe, #00f2fe);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #fff;
        margin: 0;
        padding: 0;
    }

    .container {
        padding: 2rem;
        max-width: 800px;
        margin: auto;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
    }

    h1.display-4 {
        font-weight: bold;
        color: #ffe082;
        margin-bottom: 1rem;
    }

    a {
        color: #ffccbc;
        text-decoration: none;
        font-weight: bold;
    }
    a:hover {
        text-decoration: underline;
    }

    p {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }

    .precio {
        background: rgba(255,255,255,0.15);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        display: inline-block;
        margin: 0.3rem 0;
    }
</style>

@{
    ViewData["Title"] = "Perfil";
}

<style>
  body {
    background: linear-gradient(135deg, #0f4c5c, #1b6b73);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #eaf2f4;
    margin: 0;
    padding: 0;
  }

  .card {
    max-width: 820px;
    margin: 40px auto;
    padding: 32px;
    background: rgba(0, 0, 0, .25);
    border-radius: 14px;
    box-shadow: 0 10px 24px rgba(0, 0, 0, .25);
    text-align: center;
  }

  .title {
    font-size: clamp(26px, 4vw, 36px);
    font-weight: 800;
    margin: 0 0 8px;
  }

  .subtitle {
    font-size: clamp(16px, 2.6vw, 20px);
    opacity: .95;
    margin: 4px 0;
  }

  .badge {
    display: inline-block;
    margin: 8px 6px;
    padding: 10px 14px;
    background: rgba(255, 255, 255, .12);
    border-radius: 10px;
    font-weight: 600;
  }

  .logo {
    display: block;
    margin: 18px auto 0;
    height: 84px;
    object-fit: contain;
    filter: drop-shadow(0 4px 10px rgba(0, 0, 0, .35));
  }
</style>

<div class="card">
  <h1 class="title">Williams Josue Picón Escobar</h1>
  <p class="subtitle">Ingeniería en Sistemas</p>
  <span class="badge">Análisis en Sistemas 2</span>

  <!-- Logo de la Universidad -->
  <!-- Coloca el archivo en wwwroot/img/universidad.png -->
  <img class="logo" src="~/img/universidad.png" asp-append-version="true" alt="Universidad" />
</div>

