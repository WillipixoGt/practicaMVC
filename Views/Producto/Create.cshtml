@model MiPrimerAppMVC.Models.Producto

@{
    ViewData["Title"] = "Crear producto nuevo";
}

<style>
  body{
    background: linear-gradient(135deg,#0f4c5c,#1b6b73);
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color:#eaf2f4; margin:0;
  }
  .card{
    max-width:820px; margin:40px auto; padding:28px;
    background:rgba(0,0,0,.25); border-radius:14px;
    box-shadow:0 10px 24px rgba(0,0,0,.25);
  }
  .title{
    font-size:clamp(22px,3.5vw,30px); font-weight:800; margin:0 0 14px; text-align:center;
  }
  .hint{opacity:.9; text-align:center; margin-bottom:16px;}
  .form-group{ margin-bottom:14px; }
  .control-label{ font-weight:600; margin-bottom:6px; display:block; }
  .form-control{
    width:100%; border:none; border-radius:10px; padding:12px 14px;
    background:rgba(255,255,255,.15); color:#eaf2f4;
    outline: none;
  }
  .form-control::placeholder{ color:#d6e6ea; opacity:.8; }
  .form-check{ margin-top:10px; }
  .form-check-input{ margin-right:8px; }
  .text-danger{ color:#ffd1d1; font-weight:600; }
  .actions{ display:flex; gap:10px; margin-top:14px; }
  .btn{
    border:none; border-radius:10px; padding:10px 16px; cursor:pointer; font-weight:700;
    box-shadow:0 6px 16px rgba(0,0,0,.2);
  }
  .btn-primary{ background:#00b4c6; color:#0b2f33; }
  .btn-primary:hover{ filter:brightness(1.05); }
  .btn-secondary{ background:rgba(255,255,255,.16); color:#eaf2f4; }
  .msg{ margin:10px 0; }
</style>

<div class="card">
  <h1 class="title">Crear producto nuevo</h1>
  <p class="hint">Completa los datos y guarda tu producto.</p>

  @if(ViewBag.Message != null){ <div class="msg">@ViewBag.Message</div> }
  @if(ViewBag.ErrorMessage != null){ <div class="msg text-danger">@ViewBag.ErrorMessage</div> }

  <form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
      <label asp-for="Nombre" class="control-label"></label>
      <input asp-for="Nombre" class="form-control" placeholder="Ej. Teclado mecánico" />
      <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="Descripcion" class="control-label"></label>
      <input asp-for="Descripcion" class="form-control" placeholder="Breve descripción" />
      <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="Precio" class="control-label"></label>
      <input asp-for="Precio" class="form-control" placeholder="0.00" />
      <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
      <label class="form-check-label">
        <input class="form-check-input" asp-for="Activo" />
        @Html.DisplayNameFor(m => m.Activo)
      </label>
    </div>

    <div class="actions">
      <input type="submit" value="Guardar" class="btn btn-primary" />
      <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
  </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
