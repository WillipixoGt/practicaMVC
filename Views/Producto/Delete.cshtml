@model MiPrimerAppMVC.Models.Producto

@{
    ViewData["Title"] = "Borrar producto";
}

<style>
  body{
    background: linear-gradient(135deg,#0f4c5c,#1b6b73);
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color:#eaf2f4; margin:0;
  }
  .card{
    max-width:820px; margin:40px auto; padding:28px;
    background:rgba(0,0,0,.25); border-radius:14px;
    box-shadow:0 10px 24px rgba(0,0,0,.25);
  }
  .title{
    font-size:clamp(22px,3.5vw,30px); font-weight:800; margin:0 0 10px; text-align:center;
  }
  .warn{
    background:rgba(255, 99, 71, .18);
    border:1px solid rgba(255, 99, 71, .45);
    color:#ffe3de; border-radius:10px; padding:12px 14px; margin:12px 0 18px;
    text-align:center; font-weight:700;
  }
  .msg{ margin:10px 0; color:#ffd1d1; font-weight:600; }
  dl{ margin:0; }
  dt{ font-weight:700; opacity:.95; }
  dd{
    margin-bottom:12px; background:rgba(255,255,255,.12);
    padding:10px 12px; border-radius:10px;
  }
  .actions{ display:flex; gap:10px; margin-top:16px; }
  .btn{
    border:none; border-radius:10px; padding:10px 16px; cursor:pointer; font-weight:700;
    box-shadow:0 6px 16px rgba(0,0,0,.2); text-decoration:none; display:inline-block;
  }
  .btn-danger{ background:#ff6b6b; color:#2b0d0d; }
  .btn-danger:hover{ filter:brightness(1.05); }
  .btn-secondary{ background:rgba(255,255,255,.16); color:#eaf2f4; }
</style>

<div class="card">
  <h1 class="title">Borrar producto</h1>

  @if(ViewBag.ErrorMessage != null){ <div class="msg">@ViewBag.ErrorMessage</div> }

  <div class="warn">Â¿Confirma que desea borrar este producto?</div>

  <div>
    <dl class="row">
      <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Nombre)</dt>
      <dd class="col-sm-10">@Html.DisplayFor(m => m.Nombre)</dd>

      <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Descripcion)</dt>
      <dd class="col-sm-10">@Html.DisplayFor(m => m.Descripcion)</dd>
    </dl>
  </div>

  <form asp-action="Delete" method="post" class="actions">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
  </form>
</div>
