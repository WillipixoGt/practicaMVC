@model IEnumerable<MiPrimerAppMVC.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<style>
    body {
        background: linear-gradient(135deg, #0f4c5c, #1b6b73);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #eaf2f4;
        margin: 0;
    }
    .card {
        max-width: 1000px;
        margin: 40px auto;
        padding: 28px;
        background: rgba(0, 0, 0, .25);
        border-radius: 14px;
        box-shadow: 0 10px 24px rgba(0, 0, 0, .25);
    }
    .title {
        font-size: clamp(22px, 3.5vw, 30px);
        font-weight: 800;
        margin: 0 0 20px;
        text-align: center;
    }
    .btn-add {
        display: inline-block;
        background: #00b4c6;
        color: #0b2f33;
        font-weight: 700;
        padding: 10px 14px;
        border-radius: 10px;
        text-decoration: none;
        box-shadow: 0 6px 16px rgba(0,0,0,.2);
        margin-bottom: 16px;
    }
    .btn-add:hover {
        filter: brightness(1.05);
    }
    table {
        width: 100%;
        border-collapse: collapse;
        overflow: hidden;
        border-radius: 10px;
    }
    thead {
        background: rgba(255,255,255,.1);
    }
    th, td {
        padding: 10px 12px;
        text-align: left;
    }
    tbody tr {
        border-bottom: 1px solid rgba(255,255,255,.1);
    }
    tbody tr:hover {
        background: rgba(255,255,255,.05);
    }
    a.action-link {
        margin-right: 10px;
        text-decoration: none;
        font-weight: 600;
        color: #00e6ff;
    }
    a.action-link:hover {
        text-decoration: underline;
    }
</style>

<div class="card">
    <h1 class="title">Lista de productos</h1>

    <p>
        <a class="btn-add" asp-action="Create">Agregar producto</a>
    </p>

    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.Precio)</th>
                <th>@Html.DisplayNameFor(model => model.Activo)</th>
                <th>@Html.DisplayNameFor(model => model.FechaDeAlta)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => producto.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => producto.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => producto.Precio)</td>
                    <td>@Html.DisplayFor(modelItem => producto.Activo)</td>
                    <td>@Html.DisplayFor(modelItem => producto.FechaDeAlta)</td>
                    <td>
                        <a class="action-link" asp-action="Edit" asp-route-id="@producto.Id">Editar</a>
                        <a class="action-link" asp-action="Delete" asp-route-id="@producto.Id">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
